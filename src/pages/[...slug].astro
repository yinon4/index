---
import { blog, getFolderContent, sortLinks } from "functions";
import Post from "layouts/Post.astro";

export const getStaticPaths = async () =>
  blog.map((entry) => ({
    params: { slug: entry.slug },
    props: { ...entry, links: getFolderContent(entry.slug) },
  }));

const {
  render,
  links,
  data: { title },
} = Astro.props;

const { Content } = await render();
---

<Post title={title} description={title} links={sortLinks(links)}>
  <Content />
</Post>
