---
import { getBlog, getFolderContent } from "../functions";
import Post from "../layouts/Post.astro";

export async function getStaticPaths() {
  const blogEntries = getBlog();
  return blogEntries.map((entry) => {
    return {
      params: { slug: entry.slug },
      props: { ...entry, linksTo: getFolderContent(entry.slug) },
    };
  });
}

const {
  render,
  linksTo,
  data: { title, tags },
} = Astro.props;

const { Content } = await render();
---

<Post title={title} description={title} links={linksTo}>
  <Content />
</Post>
