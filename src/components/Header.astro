---
export type Link = {
  href: string;
  text: string;
};

interface Props {
  links?: Link[];
}

const { links } = Astro.props;

links.sort((link, prev) =>
  link.text === "..."
    ? 1
    : prev.text === "..."
      ? -1
      : link.text.localeCompare(prev.text),
);

console.log(links);

// Remove trailing slash
const path = Astro.url.pathname.replace(/\/$/, "");

const isHome = !path;
---

<nav>
  {!isHome && <a href="../">‚Üê back</a>}
  {
    !!links && (
      <div class="links">
        {links.map((link) => (
          <a href={link.href}>{link.text}</a>
        ))}
      </div>
    )
  }
</nav>
<style>
  a:hover {
    text-decoration: wavy underline;
  }
  nav {
    user-select: none;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding-bottom: 2rem;
    padding-top: 1rem;
  }
  div.links {
    flex-grow: 1;
    display: flex;
    justify-content: flex-end;
    gap: 2rem;
    flex-wrap: wrap;
  }
  div:not(.links) {
    justify-content: flex-start;
  }
</style>
